// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/docker-existing-docker-compose
{
	"name": "fcc-nestjs-api",
	"dockerComposeFile": [
		"../docker-compose.yml"
	],
	"service": "app",
	"workspaceFolder": "/usr/src/app",
	"shutdownAction": "stopCompose",
	"postCreateCommand": {
		"nestjs:cli": "npm i -g @nestjs/cli",
		"git:safe-directory": "git config --global --add safe.directory /usr/src/app",
		"git:user.name": "git config --global user.name aciDrums7",
		"git:user.email": "git config --global user.email edoardo.carradori.96@gmail.com",
		"db:migration": "sudo yarn prisma migrate dev"
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"aaron-bond.better-comments",
				"alefragnani.bookmarks",
				"ms-vscode-remote.remote-containers",
				"johnpapa.vscode-peacock",
				"enkia.tokyo-night",
				"kevinghadyani.vscode-colormate",
				"mikestead.dotenv",
				"dbaeumer.vscode-eslint",
				"eamodio.gitlens",
				"yzhang.markdown-all-in-one",
				"pkief.material-icon-theme",
				"esbenp.prettier-vscode",
				"tabnine.tabnine-vscode",
				"redhat.vscode-yaml",
				"jeff-hykin.better-dockerfile-syntax",
				"prisma.prisma"
			]
		}
	}
}