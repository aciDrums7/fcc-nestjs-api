{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Run & Debug: fcc-nestjs-api",
            "args": [
                "${workspaceFolder}/src/main.ts"
            ],
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register",
                "-r",
                "tsconfig-paths/register",
                "--watch"
            ],
            "sourceMaps": true,
            "envFile": "${workspaceFolder}/.env",
            "cwd": "${workspaceRoot}",
            "console": "integratedTerminal",
            "protocol": "inspector"
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Debug: fcc-nestjs-api",
            "remoteRoot": "/usr/src/app",
            "localRoot": "${workspaceFolder}",
            "protocol": "inspector",
            "port": 9229,
            "restart": true,
            "address": "0.0.0.0",
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}